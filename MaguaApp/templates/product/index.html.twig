{% extends 'base.html.twig' %}

{% block title %}Products
{% endblock %}

{% block body %}



	<h1 class='!text-red-400'>Productos Titulo</h1>

    {% for product in products %}
    <!-- Card -->
    <div class="w-full max-w-sm bg-red-500 border border-gray-200 rounded-lg shadow mb-6">
        <!-- Image -->
        <a href="#">
            <img class="p-8 rounded-t-lg" src="https://www.elajonegroherbolarios.com/images/productos/11179/ajonegro2zKcr.jpg" alt="Imagen del producto" />
        </a>

        <!-- Footer -->
        <div class="px-5 pb-5">

            <!-- Product Name -->
            <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">{{ product.name }}</h5>
            
            <!-- Quantity and Description -->
            <p class="text-gray-700 dark:text-gray-300 mt-2">Stock: {{ product.quantity }}</p> <!-- ESTO ES PRESCINDIBLE -->
            <p class="text-gray-700 dark:text-gray-300">{{ product.description }}</p> <!-- Puedes reemplazar la descripción fija con una dinámica si tienes esta información en el objeto `product`. -->

            <!-- Size and Other Details -->
            <div class="flex items-center mt-2.5 mb-5">
                <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">5.0 litros</span>
            </div>

            <!-- Price and Add to Cart -->
            <div class="flex items-center justify-between">
                <span class="text-3xl font-bold text-gray-900 dark:text-white">1.5 Euros</span>
                <a href="#" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Agregar al carrito</a>
            </div>
        </div>
    </div>
{% endfor %}

