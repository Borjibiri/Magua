

{% block title %}Products
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
{% endblock %}

{% block header %}
	<header class="bg-gray-100 shadow-md p-4">
		<h1 class="text-lg font-bold text-gray-700">Welcome to your order</h1>
		<nav>
			<ul
				class="flex items-center justify-between">
				<!-- Log out -->
				<li>
					<a href="{{ path('app_logout') }}" class="bg-blue-500 text-black px-4 py-2 rounded hover:bg-red-600 transition">
						Log out
					</a>
				</li>
			</ul>
		</nav>
	</header>
{% endblock %}

{% block body %}
	<div
		class="main-content">
		<!-- Contenedor de productos -->
		<div class="product-container">
			{% for product in products %}
				<!-- Card -->
				<div
					class="product-card bg-blue-800">
					<!-- Image -->
					<a href="#">
						<img src="https://www.elajonegroherbolarios.com/images/productos/11179/ajonegro2zKcr.jpg" alt="Imagen del producto"/>
					</a>

					<!-- Footer -->
					<div
						class="product-footer">
						<!-- Product Name -->
						<h5>{{ product.name }}</h5>

						<!-- Quantity and Description -->
						<p>{{ product.description }}</p>

						<!-- Size and Other Details -->
						<div>
							<span></span>
						</div>

						
						<div>
							<span>{{ product.price }}</span>
							<select class="quantity-select">
								<option value="1">1</option>
								<option value="2">2</option>
								<option value="3">3</option>
								<option value="4">4</option>
								<option value="5">5</option>
								<option value="6">6</option>
								<option value="7">7</option>
								<option value="8">8</option>
								<option value="9">9</option>
								<option value="10">10</option>
							</select>
							
							<button class="add-to-cart">Add to cart</button>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

		
		<div class="cart">
			<h3>Your Cart</h3>
			<p>Items: 0</p>
			<p>Total:  Euros</p>
			<button>Proceed to Checkout</button>
		</div>
	</div>

	
	<button class="back-button">
		<a href="{{ path ('app_main') }}">Back to profile</a>
	</button>
{% endblock %}

<style>
	
	.main-content {
		display: flex;
		justify-content: space-between;
		padding: 20px;
	}

	
	.product-container {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
		gap: 20px;
		width: 70%;
	}

	
	.product-card {
		border: 1px solid #ddd;
		border-radius: 8px;
		overflow: hidden;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		background-color: #fff;
	}

	.product-card img {
		width: 100%;
		height: auto;
		border-bottom: 1px solid #ddd;
	}

	.product-footer {
		padding: 15px;
	}

	.product-footer h5 {
		font-size: 18px;
		margin-bottom: 10px;
	}

	.product-footer p {
		font-size: 14px;
		margin-bottom: 10px;
	}

	.product-footer div {
		margin-bottom: 10px;
	}

	.quantity-select {
		padding: 5px;
		margin-right: 10px;
		border-radius: 4px;
		border: 1px solid #ddd;
		font-size: 14px;
	}

	.add-to-cart {
		padding: 8px 12px;
		background-color: #4CAF50;
		color: white;
		border: none;
		border-radius: 4px;
		cursor: pointer;
	}

	.add-to-cart:hover {
		background-color: #45a049;
	}

	
	.cart {
		width: 25%;
		border: 1px solid #ddd;
		padding: 15px;
		background-color: #f9f9f9;
		border-radius: 8px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}

	.cart h3 {
		margin-bottom: 20px;
	}

	.cart button {
		padding: 10px;
		background-color: #007BFF;
		color: white;
		border: none;
		border-radius: 4px;
		width: 100%;
		cursor: pointer;
	}

	.cart button:hover {
		background-color: #0056b3;
	}

	
	.back-button {
		display: block;
		margin: 20px auto;
		padding: 10px 20px;
		background-color: #007BFF;
		color: white;
		border: none;
		border-radius: 4px;
		cursor: pointer;
	}

	.back-button a {
		color: white;
		text-decoration: none;
	}

	.back-button:hover {
		background-color: #0056b3;
	}
</style>
{% block javascripts %}
	<script>
		
let cart = [];


document.querySelectorAll('.add-to-cart').forEach(button => {
button.addEventListener('click', function () { 
const quantity = parseInt(this.previousElementSibling.value);

const productName = this.closest('.product-card').querySelector('h5').innerText;

const price = parseFloat(this.closest('.product-footer').querySelector('span').innerText.split(' ')[0]);


const product = {
name: productName,
quantity: quantity,
price: price,
total: price * quantity
};


cart.push(product);


updateCart();
});
});


function updateCart() { 
let totalItems = 0;
let totalAmount = 0;


cart.forEach(item => {
totalItems += item.quantity;
totalAmount += item.total;
});


document.querySelector('.cart p').innerText = `Items: ${totalItems}`;
document.querySelector('.cart p:nth-of-type(2)').innerText = `Total: ${
totalAmount.toFixed(2)
} Euros`;
}
	</script>
{% endblock %}

