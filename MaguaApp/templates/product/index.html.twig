{% block body %}
    <h1 class='!text-red-400'>Productos Titulo</h1>

    <!-- Cart Section -->
    <div id="cart" class="fixed bottom-0 left-0 right-0 bg-white p-4 shadow-lg">
        <h3 class="font-semibold">Carrito</h3>
        <ul id="cart-items">
            <!-- Aquí se añadirán los productos seleccionados -->
        </ul>
        <hr class="my-2">
        <div class="flex justify-between">
            <span>Total:</span>
            <span id="total-amount">0.00</span> <!-- Total sumado aquí -->
        </div>
    </div>

    {% for product in products %}
    <!-- Card -->
    <div class="w-full max-w-sm bg-red-500 border border-gray-200 rounded-lg shadow mb-6">
        <!-- Image -->
        <a href="#">
            <img class="p-8 rounded-t-lg" src="https://www.elajonegroherbolarios.com/images/productos/11179/ajonegro2zKcr.jpg" alt="Imagen del producto" />
        </a>

        <!-- Footer -->
        <div class="px-5 pb-5">
            <!-- Product Name -->
            <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">{{ product.name }}</h5>
            
            <!-- Quantity and Description -->
            <p class="text-gray-700 dark:text-gray-300 mt-2">Stock: {{ product.quantity }}</p>
            <p class="text-gray-700 dark:text-gray-300">{{ product.description }}</p>

            <!-- Size and Other Details -->
            <div class="flex items-center mt-2.5 mb-5">
                <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">5.0 litros</span>
            </div>

            <!-- Price and Add to Cart -->
            <div class="flex items-center justify-between">
                <span class="text-3xl font-bold text-gray-900 dark:text-white">{{ product.price }} Euros</span>

                <!-- Quantity Selector -->
                <input type="number" id="quantity-{{ product.id }}" min="1" max="{{ product.quantity }}" value="1" class="w-16 px-2 py-1 border rounded">

                <!-- Add to Cart Button -->
                <button class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" 
                        onclick="addToCart({{ product.id }}, '{{ product.name }}', {{ product.price }})">
                    Agregar al carrito
                </button>
            </div>
        </div>
    </div>
    {% endfor %}

