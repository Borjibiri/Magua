<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% block title %}
			<title>Register form</title>
		{% endblock %}
		{{ encore_entry_link_tags('app') }}
		<link rel="stylesheet" href="{{ asset('css/app.css') }}">
	</head>

	<body class="bg-gray-100 font-sans flex flex-col min-h-screen">

		{% block header %}
			<header class="w-full bg-[#63c3db] h-28">
				<div class="flex justify-center items-center p-4">
					<div class="text-[#ffebeb] text-6xl font-normal font-major-mono tracking-wider">
						MAGUA
					</div>
				</div>
			</header>
		{% endblock %}


{% block main %}
	<main
		class="h-screen flex bg-[#20a1c1]">
		<!-- Imagen a la izquierda -->
		<div class="hidden md:flex w-1/2 items-center justify-center bg-[#20a1c1]">
			<img src="{{ asset('img/register.png') }}" alt="Imagen decorativa" class="w-full h-full object-cover">
		</div>

		<!-- Formulario de registro -->
		<div class="w-full md:w-1/2 flex items-center justify-center">
			<div class="w-full h-full p-8 flex flex-col justify-center items-center bg-[#20a1c1]">
				<h1 class="text-black text-4xl mb-6 font-normal font-major-mono tracking-wider text-center">
					RegisteR
				</h1>

				<!-- Mostrar los errores del formulario -->
				<div class="text-red-500 mb-4 w-full max-w-lg">
					{{ form_errors(registrationForm) }}
				</div>

				{{ form_start(registrationForm) }}

				<!-- Campos del formulario -->
				<div class="w-full max-w-lg">
					<div class="mb-4">
						{{ form_row(registrationForm.name, { 'attr': {'class': 'w-full p-4 border border-gray-300 rounded-full'} }) }}
					</div>
					<div class="mb-4">
						{{ form_row(registrationForm.surname, { 'attr': {'class': 'w-full p-4 border border-gray-300 rounded-full'} }) }}
					</div>
					<div class="mb-4">
						{{ form_row(registrationForm.phone, { 'attr': {'class': 'w-full p-4 border border-gray-300 rounded-full'} }) }}
					</div>
					<div class="mb-4">
						{{ form_row(registrationForm.email, { 'attr': {'class': 'w-full p-4 border border-gray-300 rounded-full'} }) }}
					</div>
					<div class="mb-4">
						{{ form_row(registrationForm.address, { 'attr': {'class': 'w-full p-4 border border-gray-300 rounded-full'} }) }}
					</div>
					<div class="mb-4">
						{{ form_row(registrationForm.plainPassword, { label: 'Password', 'attr': {'class': 'w-full p-4 border border-gray-300 rounded-full'} }) }}
					</div>
				</div>

				<!-- Checkbox de términos y condiciones con enlace -->
				<div class="mb-4 flex items-center w-full max-w-lg">
					{{ form_widget(registrationForm.agreeTerms, { 'attr': {'class': 'mr-2'} }) }}
					<label for="{{ registrationForm.agreeTerms.vars.id }}" class="text-black text-sm">
						I agree to the
						<a href="{{ path('app_terms') }}" target="_blank" class="text-black underline">terms and conditions</a>.
					</label>
				</div>

				<!-- Botón de registro -->
				<div class="mb-4 w-full max-w-lg">
					<button type="submit" class="w-full bg-black text-white py-3 rounded-full hover:bg-gray-800 active:scale-95">
						Register
					</button>
				</div>

				{{ form_end(registrationForm) }}

				<div class="mt-4 text-center text-black text-sm">
					<p>Return to the
						<a href="{{ path('app_base') }}" class="text-black underline">home page</a>.
					</p>
				</div>
			</div>
		</div>
	</main>
{% endblock %}







		{% block footer %}
			<footer class="h-20 flex items-center justify-between bg-cover" style="background-image: url('{{ asset('img/footer.png') }}')">

				<p class="text-center text-white text-2xl font-normal font-['Sora'] mr-auto ml-auto">Magua© 2024</p>


				<div
					class="flex space-x-6 mr-6">
					<!-- Icono de Instagram -->
					<a href="#" class="text-white text-3xl hover:text-[#ffebeb]">
						<i class="fab fa-instagram"></i>
					</a>
					<!-- Icono de X (Twitter) -->
					<a href="#" class="text-white text-3xl hover:text-[#ffebeb]">
						<i class="fab fa-twitter"></i>
					</a>
					<!-- Icono de Facebook -->
					<a href="#" class="text-white text-3xl hover:text-[#ffebeb]">
						<i class="fab fa-facebook-f"></i>
					</a>
				</div>
			</footer>

		{% endblock %}

		{% block javascripts %}
			<script>
				function initRipples() {
setInterval(() => {
const rippleBackground = document.querySelector('.ripple-background');
const ripple = document.createElement('div');
const size = Math.random() * 100 + 50;
ripple.classList.add('ripple');
ripple.style.width = `${size}px`;
ripple.style.height = `${size}px`;
ripple.style.top = `${
Math.random() * window.innerHeight
}px`;
ripple.style.left = `${
Math.random() * window.innerWidth
}px`;
rippleBackground.appendChild(ripple);
setTimeout(() => ripple.remove(), 6000);
}, 1500);
}

window.onload = initRipples;
			</script>
		{% endblock %}

	</body>
</html>
