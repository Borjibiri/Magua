<html lang="es" class="h-screen">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% block title %}
			<title class="text-2xl font-semibold text-gray-800">Welcome!</title>
		{% endblock %}
		{{ encore_entry_link_tags('app') }}
		{% block stylesheets %}
			<link rel="stylesheet" href="{{ asset('css/app.css') }}">
