					<!-- Enlaces a la derecha: Order, Products, About, Login y Register -->
					<nav class="space-x-8 text-white text-lg">
						<a href="#" class="hover:text-[#ffebeb]">Order</a>
						<a href="#" class="hover:text-[#ffebeb]">Products</a>
						<a href="#" class="hover:text-[#ffebeb]">About</a>

						<!-- Botones de Login y Register -->
						<a href="{{ path('app_login') }}" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Login</a>
						<a href="{{ path('app_register') }}" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-orange-600">Register</a>
					</nav>
				</div>
			</header>
		{% endblock %}

