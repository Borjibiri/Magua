{% extends "base.html.twig" %}
{% block header %}
	<header class="bg-[#63c3db] shadow-md p-6 h-28 flex items-center justify-between">
		<h1 class="text-[#ffebeb] text-6xl font-normal font-major-mono tracking-wider">
			MAGUA</h1>

		<nav>
			<ul class="flex items-center space-x-6">
				<li>
					<a href="{{ path('app_product_index') }}" class="text-[#ffebeb] border-2 border-white px-4 py-2 rounded-lg font-normal font-major-mono tracking-wider hover:text-black hover:border-black">
						mAke An oRdeR
					</a>
				</li>
				<li>
					<a href="{{ path('app_logout') }}" class="text-[#ffebeb] border-2 border-white px-4 py-2 rounded-lg font-normal font-major-mono tracking-wider hover:text-black hover:border-black">
						loG out
					</a>
				</li>
				<li>
					<a href="#" class="text-[#ffebeb] border-2 border-white px-4 py-2 rounded-lg font-normal font-major-mono tracking-wider hover:text-black hover:border-black">
						About Us
					</a>
				</li>
			</ul>
		</nav>

	</header>
{% endblock %}

{% block main %}
	<main class="flex-grow bg-[#20a1c1] p-8 h-full flex flex-col items-center">
		<div class="flex items-center mb-6">
			<div class="w-32 h-32 bg-gray-200 rounded-full overflow-hidden mr-6">
				<img src="https://randomuser.me/api/portraits/men/{{ user.id }}.jpg" alt="Imagen de usuario" class="w-full h-full object-cover">
			</div>


			<div>
				<h1 class="text-white text-3xl font-normal font-major-mono tracking-wider">
					Welcome,
					{{ user.name }}!
				</h1>
			</div>
		</div>

		<!-- Título "Mis órdenes" -->
		<h2 class="text-white mb-6 text-4xl font-normal font-major-mono tracking-wider">
			My oRdeRs
		</h2>

		<!-- Lista de órdenes -->
		<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 w-full h-[400px] overflow-y-auto">
			{% for order in orders %}
				<div class="border rounded-lg p-6 shadow-md bg-white transition-all duration-300 hover:bg-gray-200 hover:scale-105 text-center">
					<p class="font-semibold text-lg text-gray-700">Order #{{ order.id }}</p>
					<p class="text-gray-600">Status:
						{{ order.status }}</p>
					<p class="text-gray-600">Total:
						{{ order.getTotalAmount }}
						Euros</p>

					<!-- Contenedor de la animación del camión -->
					<div
						class="relative mt-4 h-16 overflow-hidden">
						<!-- SVG del camión animado -->
						<svg class="absolute bottom-0 left-0 w-24 h-16 text-blue-500 animate-[moveTruck_20s_linear_infinite]" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 100 100">
							<g>
								<!-- Camión -->
								<rect x="10" y="40" width="60" height="20" rx="4" fill="currentColor"/>
								<rect x="72" y="45" width="16" height="15" rx="2" fill="currentColor"/>
								<circle cx="20" cy="60" r="6" fill="black"/>
								<circle cx="60" cy="60" r="6" fill="black"/>
							</g>
						</svg>
					</div>

					<!-- Barra de progreso (si es necesario) -->
					<div class="w-full  rounded-full h-2 mt-4">
						<div class=" h-2 rounded-full"></div>
					</div>
				</div>

				<!-- Definir la animación en el CSS -->
				<style>
					@keyframes moveTruck {
						0% {
							transform: translateX(0);
						}
						100% {
							transform: translateX(100vw);
						}
					}
				</style>


			{% endfor %}
		</div>


	</main>
{% endblock %}
