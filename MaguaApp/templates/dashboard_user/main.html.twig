<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% block title %}
			<title>User Page</title>
		{% endblock %}
	</head>
</html>

{% block stylesheets %}
	{{ encore_entry_link_tags('app') }}
	<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
{% endblock %}

{% block header %}
	<header class="bg-gray-100 shadow-md p-4">
		<h1 class="text-lg font-bold text-gray-700">Welcome
			{{ user.name }}</h1>
		<nav>
			<ul class="flex items-center justify-between">

				<li>
					<a href="{{ path('app_product_index') }}" class="bg-blue-500 text-black px-4 py-2 rounded hover:bg-blue-600 transition">Make an order</a>
				</li>
				<li>
					<a href="{{ path('app_logout') }}" class="bg-blue-500 text-black px-4 py-2 rounded hover:bg-blue-600 transition">Log out</a>
				</li>
				<li>
					<a href="#" class="bg-blue-500 text-black px-4 py-2 rounded hover:bg-blue-600 transition">About Us</a>
				</li>
			</ul>
		</nav>
	</header>
{% endblock %}

{% block body %}

	<h5>{{ user.name }}</h5>
<div class="flex-wrap w-full" style="height: 100vh; flex-wrap: wrap; display:flex;">


		{% for order in orders %}
			<div class="" style="width: 200px; height: 10vh;  border: 1px black solid;">
				{# <a href="#">
							<img src="https://www.elajonegroherbolarios.com/images/productos/11179/ajonegro2zKcr.jpg" alt="Imagen del producto"/>
						</a> #}
				<p>NÃºmero de Pedido: {{ order.id }}</p>
				<p>Estado: {{ order.status }} </p>
				<p>Total: {{ order.getTotalAmount }} Euros</p>
				{# <span>{{ order.getDateCreated}}</span> #}


				{# <span>{{ order.date_created }}</span> #}
			</div>
		{% endfor %}
	</div>


{% endblock %}

{% block footer %}
	<div>
		<button class="back-button">
			<a href="{{ path ('app_main') }}">BACK</a>
		</button>
	</div>
{% endblock %}
