{% extends "base.html.twig" %}
{% block header %}
	<header
		class="bg-[#63c3db] shadow-md p-6 h-28 flex items-center justify-between">
		{# <h1 class="text-[#ffebeb] text-3xl font-normal font-major-mono tracking-wider">
													Welcome,
													{{ user.name }}!</h1> #}
		<h1 class="text-[#ffebeb] text-6xl font-normal font-major-mono tracking-wider">
			MAGUA</h1>

		<nav>
			<ul class="flex items-center space-x-6">
				<li>
					<a href="{{ path('app_product_index') }}" class="text-[#ffebeb] border-2 border-white px-4 py-2 rounded-lg font-normal font-major-mono tracking-wider hover:text-blue-500 hover:border-blue-500">
						Make an order
					</a>
				</li>
				<li>
					<a href="{{ path('app_logout') }}" class="text-[#ffebeb] border-2 border-white px-4 py-2 rounded-lg font-normal font-major-mono tracking-wider hover:text-blue-500 hover:border-blue-500">
						Log out
					</a>
				</li>
				<li>
					<a href="#" class="text-[#ffebeb] border-2 border-white px-4 py-2 rounded-lg font-normal font-major-mono tracking-wider hover:text-blue-500 hover:border-blue-500">
						About Us
					</a>
				</li>
			</ul>
		</nav>

	</header>
{% endblock %}

{% block main %}
	<main
		class="flex-grow bg-[#20a1c1] p-8 h-full flex flex-col items-center">
		<!-- Contenedor de la imagen y el texto del usuario alineados en fila -->
		<div
			class="flex items-center mb-6">
			<!-- Imagen de usuario alineada a la izquierda -->
			<div class="w-32 h-32 bg-gray-200 rounded-full overflow-hidden mr-6">
				<img src="https://randomuser.me/api/portraits/men/{{ user.id }}.jpg" alt="Imagen de usuario" class="w-full h-full object-cover">
			</div>

			<!-- Nombre de usuario -->
			<div>
				<h1 class="text-black text-3xl font-normal font-major-mono tracking-wider">
					Welcome,
					{{ user.name }}!
				</h1>
			</div>
		</div>

		<!-- Título "Mis órdenes" -->
		<h2 class="text-black mb-6 text-4xl font-normal font-major-mono tracking-wider">
			My Orders
		</h2>

		<!-- Lista de órdenes -->
		<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 w-full h-[400px] overflow-y-auto">
			{% for order in orders %}
				<div class="border rounded-lg p-4 shadow-md bg-white transition-transform duration-300 hover:scale-105">
					<p class="font-semibold text-lg text-gray-700">Order #{{ order.id }}</p>
					<p class="text-gray-600">Status:
						{{ order.status }}</p>
					<p class="text-gray-600">Total:
						{{ order.getTotalAmount }}
						Euros</p>
				</div>
			{% endfor %}
		</div>


	</main>
{% endblock %}
