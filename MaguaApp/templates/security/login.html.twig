<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% block title %}
			<title>Log in</title>
		{% endblock %}
		{{ encore_entry_link_tags('app') }}
		<link rel="stylesheet" href="{{ asset('css/app.css') }}">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
	</head>

	<body class="h-[calc(100%-19px)]">

		{% block header %}
			<header class="w-full bg-[#63c3db] h-28">
				<div class="flex justify-center items-center p-4">
					<div class="text-[#ffebeb] text-6xl font-normal font-major-mono tracking-wider">
						MAGUA
					</div>
				</div>
			</header>
		{% endblock %}


		{% block main %}
			<main class="h-full flex items-center justify-center bg-[#20a1c1] ">


				<div class="w-full flex justify-center overflow-hidden">
					<img src="{{ asset('img/bg-login1.png') }}" alt="repartidor de agua" class="w-full h-full object-contain">
				</div>


				<div class="w-full flex  justify-center">
					<div class="h-full w-100 bg-[#20a1c1] p-6 rounded-lg shadow-lg">
						<h3 class="text-black text-4xl mb-4 font-normal font-major-mono tracking-wider">Please sign in</h3>
						<form method="post">
							{% if error %}
								<div class="text-red-500 mb-4">
									{{ error.messageKey|trans(error.messageData, 'security') }}
								</div>
							{% endif %}

							{% if app.user %}
								<div class="text-green-500 mb-4">
									You are logged in as
									{{ app.user.userIdentifier }},
									<a href="{{ path('app_logout') }}" class="text-blue-500 hover:text-blue-700">Logout</a>
								</div>
							{% endif %}

							<div class="mb-4">
								<label for="inputEmail" class="text-black text-2lg font-normal font-major-mono tracking-wider">Email</label>
								<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full p-3 mt-1 border border-gray-300 rounded-lg" required autofocus>
							</div>

							<div class="mb-6">
								<label for="inputPassword" class="text-black text-2lg font-normal font-major-mono tracking-wider">Password</label>
								<input type="password" name="password" id="inputPassword" class="w-full p-3 mt-1 border border-gray-300 rounded-lg" required>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<button type="submit" class="w-full bg-black text-white font-normal font-major-mono tracking-wider py-3 rounded-lg active:scale-95 active:bg-gray-800">
								Sign in
							</button>
						</form>

						<div class="mt-4 text-center text-black text-2lg font-normal font-major-mono tracking-wider">
							<p>Don't have an account?
								<a href="{{ path('app_base') }}" class="text-black underline text-2lg font-normal font-major-mono tracking-wider">Register</a>
							</p>
						</div>

						<div class="mt-4 text-center text-black text-2lg font-normal font-major-mono tracking-wider">
							<p>Return to the
								<a href="{{ path('app_base') }}" class="text-black underline text-2lg font-normal font-major-mono tracking-wider">home page</a>
							</p>
						</div>
					</div>
				</div>

			</main>
		{% endblock %}


		{% block footer %}
			<footer class="h-20 flex items-center justify-between bg-cover" style="background-image: url('{{ asset('img/footer.png') }}')">

				<p class="text-center text-white text-2xl font-normal font-['Sora'] mr-auto ml-auto">MaguaÂ© 2024</p>


				<div
					class="flex space-x-6 mr-6">
					<!-- Icono de Instagram -->
					<a href="#" class="text-white text-3xl hover:text-[#ffebeb]">
						<i class="fab fa-instagram"></i>
					</a>
					<!-- Icono de X (Twitter) -->
					<a href="#" class="text-white text-3xl hover:text-[#ffebeb]">
						<i class="fab fa-twitter"></i>
					</a>
					<!-- Icono de Facebook -->
					<a href="#" class="text-white text-3xl hover:text-[#ffebeb]">
						<i class="fab fa-facebook-f"></i>
					</a>
				</div>
			</footer>
		{% endblock %}

	</body>
</html>
