{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<!-- Contenedor principal para centrar el formulario en la pantalla -->
	<div class="flex items-center justify-center min-h-screen bg-gray-100">
		<form method="post" class="w-full max-w-md p-8 bg-white rounded-lg shadow-lg">

			{% if error %}
				<div class="mb-4 text-red-600 bg-red-100 p-3 rounded">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3 text-gray-700">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}" class="text-blue-600 hover:underline">Logout</a>
				</div>
			{% endif %}

			<!-- Título del formulario -->
			<h1 class="text-2xl font-semibold text-center mb-6">Please sign in</h1>

			<!-- Campo de Email -->
			<div class="mb-4">
				<label for="inputEmail" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" autocomplete="email" required autofocus>
			</div>

			<!-- Campo de Contraseña -->
			<div class="mb-6">
				<label for="inputPassword" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
				<input type="password" name="password" id="inputPassword" class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-blue-300" autocomplete="current-password" required>
			</div>

			<!-- Token de seguridad oculto -->
			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<!-- Botón de Envío -->
			<button type="submit" class="w-full py-2 bg-blue-600 text-white font-semibold rounded hover:bg-blue-700 transition duration-200">
				Sign in
			</button>
		</form>
	</div>

	<!-- Link de regreso a la página principal -->
	<div class="text-center mt-6">
		<p>Return to the
			<a href="{{ path('app_base') }}" class="text-blue-600 hover:underline">home page</a>
		</p>
	</div>
{% endblock %}


