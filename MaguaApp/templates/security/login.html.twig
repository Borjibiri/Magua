<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		{% block title %}
			<title>Log in</title>
		{% endblock %}
		{{ encore_entry_link_tags('app') }}
		<link rel="stylesheet" href="{{ asset('css/app.css') }}">
	</head>

	<body class="bg-gray-100 font-sans flex flex-col min-h-screen">

		{% block header %}
			<header class="w-full bg-[#63c3db]">
				<div
					class="flex justify-center items-center p-4">
					<!-- Título MAGUA -->
					<div class="text-[#ffebeb] text-5xl font-normal font-['Major Mono Display'] tracking-wider">
						MAGUA
					</div>
				</div>
			</header>
		{% endblock %}

		{% block body %}
			<main class="flex-grow flex items-center justify-center bg-blue-700 py-8">
				<div class="max-w-md w-full bg-white p-6 rounded-lg shadow-lg">
					<h1 class="text-3xl font-semibold text-center mb-6">Please sign in</h1>

					<form method="post">
						{% if error %}
							<div class="text-red-500 mb-4">
								{{ error.messageKey|trans(error.messageData, 'security') }}
							</div>
						{% endif %}

						{% if app.user %}
							<div class="text-green-500 mb-4">
								You are logged in as
								{{ app.user.userIdentifier }},
								<a href="{{ path('app_logout') }}" class="text-blue-500 hover:text-blue-700">Logout</a>
							</div>
						{% endif %}

						<div class="mb-4">
							<label for="inputEmail" class="block text-gray-700">Email</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="w-full p-3 mt-1 border border-gray-300 rounded-lg" required autofocus>
						</div>

						<div class="mb-6">
							<label for="inputPassword" class="block text-gray-700">Password</label>
							<input type="password" name="password" id="inputPassword" class="w-full p-3 mt-1 border border-gray-300 rounded-lg" required>
						</div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<button type="submit" class="w-full bg-blue-500 text-white py-3 rounded-lg hover:bg-blue-600">Sign in</button>
					</form>

					<div class="text-center mt-4">
						<p>Return to the
							<a href="{{ path('app_base') }}" class="text-blue-500 hover:text-blue-700">home page</a>
						</p>
					</div>
				</div>
			</main>
		{% endblock %}

		{% block footer %}
			<footer class="bg-blue-500 text-right text-white text-base font-normal font-['Sora'] py-4 mt-auto">
				Magua© 2024
			</footer>
		{% endblock %}

	</body>
</html>







